<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shelter_project.infoBoard.CommentMapper">
		
	<insert id="addComment">
		insert into comments values(comments_seq.nextval,#{postNo},#{content},#{author},
		#{createdDate},#{createdDate},#{parentNo})
	</insert>
	
	<select id="getComments">
		select * from comments where postNo = #{postNo}
	</select>
</mapper>